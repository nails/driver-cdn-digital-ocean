{
    "name": "nailsapp/driver-cdn-digital-ocean",
    "keywords": ["Nails", "Shed Collective", "CodeIgniter", "CDN Module", "Driver", "Digital Ocean"],
    "homepage": "http://nailsapp.co.uk/modules/cdn/driver/digital-ocean",
    "description": "This is the \"Digital Ocean\" driver for the Nails CDN module.",
    "license": "MIT",
    "authors":
    [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support":
    {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "aws/aws-sdk-php": "3.*",
    },
    "require-dev":
    {
        "phpunit/phpunit": "4.*"
    },
    "autoload":
    {
        "psr-4": {"Nails\\Cdn\\Driver\\": "src/"}
    },
    "extra":
    {
        "nails" :
        {
            "name": "Digital Ocean",
            "type": "driver",
            "subType": "storage",
            "forModule": "nailsapp/module-cdn",
            "data": {
                "namespace": "Nails\\Cdn\\Driver\\",
                "class": "DigitalOcean",
                "settings": [
                    {
                        "legend": "Credentials",
                        "fields": [
                            {
                                "key": "access_key",
                                "label": "Access Key",
                                "encrypted": true
                            },
                            {
                                "key": "access_secret",
                                "label": "Access Secret",
                                "type": "password",
                                "encrypted": true
                            }
                        ]
                    },
                    {
                        "legend": "Data Centre &amp; Spaces",
                        "fields": [
                            {
                                "key": "data_center",
                                "label": "Data Center"
                            },
                            {
                                "key": "spaces",
                                "label": "Spaces",
                                "type": "textarea",
                                "info": "Spaces should be specified as a JSON object with the environment as the key, and the space as the value. e.g. <code>{\"PRODUCTION\":\"my-space\"}</code>"
                            }
                        ]
                    },
                    {
                        "legend": "URLs",
                        "fields": [
                            {
                                "key": "uri_serve",
                                "label": "Serving URI",
                                "default": "http://{{space}}.{{data_center}}.digitaloceanspaces.com",
                                "info": "Value will be passed into <code>site_url()</code>"
                            },
                            {
                                "key": "uri_serve_secure",
                                "label": "Serving URI (Secure)",
                                "default": "https://{{space}}.{{data_center}}.digitaloceanspaces.com",
                                "info": "Value will be passed into <code>site_url()</code>"
                            },
                            {
                                "key": "uri_process",
                                "label": "Processing URI",
                                "default": "cdn",
                                "info": "Value will be passed into <code>site_url($value)</code>"
                            },
                            {
                                "key": "uri_process_secure",
                                "label": "Processing URI (Secure)",
                                "default": "cdn",
                                "info": "Value will be passed into <code>site_url($value, true)</code>"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
